.side-bar 
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name 
        = current_user.name
      %ul.side-bar__user-name__top-items__icon 
        %li.side-bar__user-name__top-items__edit-user
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__user-name__top-items__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message